            option(value="SÃO JOÃO DO RIO VERMELHO") São João do Rio Vermelho
            option(value="SEDE INSULAR") Sede Insular
            option(value="SEDE CONTINENTAL") Sede Continental
          br
          label(for="lname") Categoria
          br
          select#categoria(name="categoria" placeholder="categoria" required="required")
            option(value="Categoria") Categoria
            option(value="ESPAÇOS_LIVRES_ASSOCIADOS_À_CIRCULAÇÃO") Espaços livres associados à circulação
            option(value="ESPAÇOS_LIVRES_ASSOCIADOS_À_ORLA") Espaços livres associados à orla
            option(value="ESPAÇOS_LIVRES_DE_CONSERVAÇÃO_E_PRESERVAÇÃO_AMBIENTAL") Espaços livres de conservação e preservação ambiental
