          label(for="lname") Distrito
          br
          select#distrito(name="distrito" placeholder="Distrito" required="required")
            option(value="Distrito") Distrito
            option(value="BARRA DA LAGOA") Barra da Lagoa
            option(value="CACHOEIRA DO BOM JESUS") Cachoeira do bom Jesus
