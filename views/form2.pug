            option(value="ESPAÇOS_LIVRES_NÃO_CLASSIFICADOS") Espaços livres não classificados
          br
          label(for="lname") Tipo de Espaço Público
          br
          select#tipo_ep(name="tipo_ep" placeholder="Tipo de Espaço Público" required="required" onchange="geraRepId()")
            option(value="Tipo EP") Tipo de Espaço Público
            option(value="Áreas esportivas abertas") Áreas esportivas abertas
            option(value="Alamedas e Bulevares") Alamedas e Bulevares
            option(value="Áreas naturais tombadas") Áreas naturais tombadas
